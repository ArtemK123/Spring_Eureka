FROM maven:3.6.3-jdk-14 AS build

# Root folder (with docker-compose.yml) should be specified as context

RUN mkdir /tmp/eureka_kafka_consumer
COPY ./eureka_kafka_consumer/pom.xml /tmp/eureka_kafka_consumer
COPY ./eureka_kafka_consumer/src /tmp/eureka_kafka_consumer/src

WORKDIR /tmp/eureka_kafka_consumer
RUN mvn -B install

WORKDIR /tmp/eureka_kafka_consumer
RUN mvn -B package

FROM openjdk:14-jdk

RUN mkdir /app

COPY --from=build /tmp/eureka_kafka_consumer/target/*.jar /app/spring-boot-application.jar

ADD https://raw.githubusercontent.com/vishnubob/wait-for-it/master/wait-for-it.sh /app/wait-for-it.sh
RUN chmod +x /app/wait-for-it.sh

ENTRYPOINT ["java", "-jar", "/app/spring-boot-application.jar"]